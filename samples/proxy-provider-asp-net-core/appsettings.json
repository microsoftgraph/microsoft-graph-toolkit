{
  "AzureAd": {
    "CallbackPath": "/signin-oidc",
    "BaseUrl": "https://localhost:44334",
    "ClientId": "YOUR_APP_ID_HERE",
    "ClientSecret": "YOUR_APP_PASSWORD_HERE", // This sample uses a password (secret) to authenticate. Production apps should use a certificate.
    "Scopes": "openid email profile offline_access",
    "GraphResourceId": "https://graph.microsoft.com/",
    "GraphScopes": "User.Read User.ReadBasic.All Calendars.Read People.Read Contacts.Read User.Read.All Group.Read.All ChannelMessage.Read.All Sites.Read.All Mail.ReadBasic User.Read.All People.Read.All"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  }
}
