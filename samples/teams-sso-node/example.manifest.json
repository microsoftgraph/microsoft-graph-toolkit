{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.8/MicrosoftTeams.schema.json",
  "manifestVersion": "1.8",
  "version": "1.0.0",
  "id": "{ The unique GUID for this Teams Application }",
  "packageName": "com.mgt.teamsSsoSample",
  "developer": {
    "name": "Microsoft Graph Toolkit",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "MGT SSO Tab Sample",
    "full": "Microsoft Graph Toolkit SSO Auth sample app for Microsoft Teams"
  },
  "description": {
    "short": "MGT SSO sample for Microsoft Teams",
    "full": "This sample app provides a very simple app for Microsoft Teams which illustrates how single sign-on (SSO) with Microsoft Graph Toolkit should work for tabs"
  },
  "accentColor": "#FFFFFF",
  "staticTabs": [
    {
      "entityId": "com.mgt.mgtSsoSample.static",
      "name": "MGT SSO Tab",
      "contentUrl": "https://{ngrokSubdomain}.ngrok.io",
      "scopes": ["personal"]
    }
  ],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": ["{ngrokSubdomain}.ngrok.io"],
  "webApplicationInfo": {
    "id": "{app registration id}",
    "resource": "api://{ngrokSubdomain}.ngrok.io/{app registration id}"
  }
}
